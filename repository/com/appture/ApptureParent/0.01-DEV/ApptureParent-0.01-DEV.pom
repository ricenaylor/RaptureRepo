<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.appture</groupId>
	<version>0.01-DEV</version>
	<name>Common parent for all Appture Builds</name>
	<artifactId>ApptureParent</artifactId>
	<packaging>pom</packaging>
	<properties>
        <rapture.version>0.75-DEV</rapture.version>
		<java.version>1.6</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<git.mvn.repository.url>file:///${basedir}/../../RaptureRepo-pages/repository/</git.mvn.repository.url>
		<git.mvn.repository.url2>file:///${basedir}/../../../RaptureRepo-pages/repository/</git.mvn.repository.url2>
	</properties>
	<modules>
		<module>PMS</module>
	</modules>
	<repositories>
		<repository>
			<id>central</id>
			<layout>default</layout>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
     	<repository>
			<id>amkimian</id>
			<name>amkimian github</name>
			<url>http://incapture.github.com/RaptureRepo/repository</url>
		</repository>
	</repositories>
	<dependencies>
        <dependency>
            <groupId>com.rapture</groupId>
            <artifactId>RaptureAPI</artifactId>
            <version>${rapture.version}</version>
        </dependency>
     	<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<type>jar</type>
			<optional>true</optional>
		</dependency>
     	<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.9.0</version>
				<configuration>
					<header>src/etc/license.txt</header>
					<excludes>
						<exclude>**/*.js</exclude>
						<exclude>**/*.css</exclude>
						<exclude>**/*.scss</exclude>
						<exclude>**/*.tex</exclude>
						<exclude>**/*.md</exclude>
					</excludes>
                    <mapping>
                        <rfx>DOUBLESLASH_STYLE</rfx>
                    </mapping>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>gh-pages</id>
			<url>file:///${basedir}/../RaptureRepo-pages/repository/</url>
		</repository>
	</distributionManagement>
</project>
